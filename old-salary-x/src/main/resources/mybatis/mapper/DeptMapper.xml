<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.old.ssm.mapper.DeptMapper">
	
	<select id="findAll" resultType="org.old.ssm.entity.Dept">
		select * from t_dept where status=1
	</select>
	
	<select id="findById" resultType="org.old.ssm.entity.Dept">
		select * from t_dept where id=#{id}
	</select>
	
</mapper>